    "method-override": "3.0.0",
    "moment": "2.30.1",
    "moment-timezone": "0.5.46",
    "mongoose": "8.8.1",
    "openai": "^4.72.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
